# ----------------------------------------------------------------------------------------
# https://github.com/calamares/calamares/blob/calamares/src/branding/default/branding.desc
# ----------------------------------------------------------------------------------------

componentName:  nixos

# ====================================================
# WELCOME / OVERALL WORDING
# ====================================================

welcomeStyleCalamares:  false

welcomeExpandingLogo:   true

# ====================================================
# WINDOW CONFIGURATION
# ====================================================

windowExpanding:  normal

windowSize: 800px,520px

windowPlacement: center

# ====================================================
# PANELS CONFIGURATION
# ====================================================

sidebar: widget

navigation: widget

# ====================================================
# STRINGS, IMAGES AND COLORS
# ====================================================

strings:
    productName:         "GLF-OS" 
    shortProductName:    GLF-OS  
    version:             
    shortVersion:        
    versionedName:       GLF-OS
    shortVersionedName:  GLF-OS
    bootloaderEntryName: GLF-OS
    productUrl:          https://nixos.org/
    supportUrl:          https://nixos.org/manual/nixos
    knownIssuesUrl:      https://github.com/NixOS/nixpkgs/issues
    releaseNotesUrl:     https://nixos.org/manual/nixos/stable/release-notes.html
    donateUrl:           https://nixos.org/donate.html

images:
    # productBanner:       "banner.png"
    productIcon:         "logo-glf-os.svg"
    productLogo:         "white.png"
    # productWallpaper:    "wallpaper.png"
    productWelcome:      "logo-glf-os.svg"

style:
   SidebarBackground:        "#5277C3"
   SidebarText:              "#FFFFFF"
   SidebarTextCurrent:       "#292F34"
   SidebarBackgroundCurrent: "#7EBAE4"

# ====================================================
# SLIDESHOW
# ====================================================

slideshow:    "show.qml"

slideshowAPI: 2

uploadServer :
    type :    "fiche"
    url :     "http://termbin.com:9999"
    sizeLimit : -1
